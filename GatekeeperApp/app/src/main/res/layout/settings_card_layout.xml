<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_alarm_settings_50" />

    <TextView
        android:id="@+id/card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/icon"
        android:text="SETTINGS"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/static_settings_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_text"
        android:layout_alignLeft="@+id/icon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Set time when the alarm must be on."
        android:textColor="@color/gray"
        android:textSize="15dp"
        android:textStyle="bold"
        app:switchMinWidth="30dp" />




    <TextView
        android:id="@+id/link_logs_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/static_settings_txt"
        android:layout_alignLeft="@+id/icon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="edit alarm settings"
        android:textColor="@color/adriatic_blue"
        android:textSize="15dp"
        android:clickable="true"
        android:textStyle="bold"
        app:switchMinWidth="30dp" />


</RelativeLayout>